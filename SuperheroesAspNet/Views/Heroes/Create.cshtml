@model HeroViewModel

<h2>Create Hero</h2>

<form asp-action="Create" method="post">
    <div>
        <label asp-for="SuperheroName"></label>
        <input asp-for="SuperheroName" />
        <span asp-validation-for="SuperheroName"></span>
    </div>
    <div>
        <label asp-for="FullName"></label>
        <input asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div>
        <label asp-for="HeightCm"></label>
        <input asp-for="HeightCm" />
        <span asp-validation-for="HeightCm"></span>
    </div>
    <div>
        <label asp-for="WeightKg"></label>
        <input asp-for="WeightKg" />
        <span asp-validation-for="WeightKg"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
